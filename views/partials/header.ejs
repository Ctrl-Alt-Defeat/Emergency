<script>
  let id = localStorage.getItem('id');
  if(id){
    $('#log_page').text(localStorage.getItem('username'));
    $('#header_img').attr("src",localStorage.getItem('img'));
    $('.nav').css('pointer-events', 'auto');
  }else{
    $('#log_page').text('Signup');
    $('.nav').css('pointer-events', 'none');
    $('#header_img').attr("src",'https://cdn.business2community.com/wp-content/uploads/2014/08/My_profile-orange.png');
  };
</script>